@model SudokuMaster.Models.NewGameViewModel

<br />
<br />
<h3>Welcome to Sudoku</h3>
<br />
<label>Choose your difficulty level</label>
@using (Html.BeginForm("Play", "Sudoku", FormMethod.Post))
{
    @*<button onclick="alert('todo')">Settings</button>*@
    @Html.HiddenFor(x => x.EastyCount)
    @Html.HiddenFor(x => x.MediumCount)
    @Html.HiddenFor(x => x.HardCount)
    @Html.HiddenFor(x => x.DiabolicalCount)
    <div class="dl-horizontal">
        <div class="form-group">
            Easy &nbsp;@Html.RadioButtonFor(x => x.SelectedDifficulty, 0)
        </div>
        <div class="form-group">
            Medium &nbsp; @Html.RadioButtonFor(x => x.SelectedDifficulty, 1)
        </div>
        <div class="form-group">
            Hard &nbsp; @Html.RadioButtonFor(x => x.SelectedDifficulty, 2)
        </div>
        <div class="form-group">
            Diabolic &nbsp; @Html.RadioButtonFor(x => x.SelectedDifficulty, 3)
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Play" />
        </div>
    </div>
}